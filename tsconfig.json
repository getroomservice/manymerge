{
  "compilerOptions": {
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "module": "commonjs",
    "outDir": "./dist",
    "rootDirs": ["./src"],
    "strict": false,
    "jsx": "preserve",
    "target": "es2017",
    "typeRoots": ["./node_modules/@types"],
    "skipLibCheck": true
  },
  "include": ["./src/**/*", "@types/automerge"]
}
